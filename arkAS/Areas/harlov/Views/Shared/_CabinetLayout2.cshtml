@using Glimpse.Mvc.Html
<!DOCTYPE html>
<html prefix="og: http://ogp.me/ns#">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@(ViewBag.Title ?? "DocSystem: Управление")</title>
    @Styles.Render("~/bundles/css")
    <link href="~/Areas/Molchanov/Content/Styles.css" rel="stylesheet">
    @Styles.Render("~/bundles/sb-admin-css")
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    @RenderSection("css", false)
</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("DocSystem: Кабинет", "DocumentsList", "Document", new { area = "Molchanov" }, new { @class = "navbar-brand" })
            </div>
            <!-- /.navbar-header -->

            @Html.Partial("_LoginPartial")
            <ul class="nav navbar-top-links navbar-right">
                <li><a href="@Url.Action("Tutorial", "DocSystem")"><i class="fa fa-book fa-fw"></i> Руководство</a></li>
                <li><a href="@Url.Action("Faq", "DocSystem")"><i class="fa fa-question fa-fw"></i> FAQ</a></li>
            </ul>
            <!-- /.navbar-top-links -->

            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li>
                            <a href="@Url.Action("ContragentsList","Contragent")"><i class="fa fa-group fa-fw"></i> Контрагенты</a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-folder fa-fw"></i> Документы <span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="@Url.Action("DocumentsList","Documents")">Список документов</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("DocStatusesList", "Documents")">Список статусов документов</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("DocTypesList","Document")">Список видов документов</a>
                                </li>
                            </ul>
                        <li>
                            <a href="#"><i class="fa fa-file fa-fw"></i> Счета <span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="@Url.Action("InvoicesList","Invoice")">Список счетов</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("InvoiceStatusesList", "Invoice")">Список статусов счетов</a>
                                </li>
                            </ul>
                        <li>
                            <a href="#"><i class="fa fa-envelope fa-fw"></i> Почтовые отправления <span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="@Url.Action("MailsList","Mail")">Список почтовых отправлений</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("MailStatusesList","Mail")">Статусы почтовых отправлений</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("DeliverySystemsList", "Mail")">Системы отправки</a>
                                </li>
                            </ul>
                    </ul>
                </div>
            </div>

        </nav>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    @RenderBody()
                </div>
            </div>
            <footer>
                <p>&copy; @DateTime.Now.Year - Система разработки CRM (личных кабинетов) на заказ Ark AS (Web-automation.ru)</p>
            </footer>
        </div>
    </div>
    <div class="modal fade" id="asModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Modal title</h4>
                </div>
                <div class="modal-body">
                    <p>One fine body&hellip;</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                    <button type="button" class="btn btn-primary">ОК</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
    <script src="~/js/AS/as.resources.js" charset="windows-1251"></script>
    @Scripts.RenderFormat("<script type=\"text/javascript\" src=\"{0}\" charset=\"windows-1251\"></script>", "~/bundles/libs")
    @Scripts.RenderFormat("<script type=\"text/javascript\" src=\"{0}\" charset=\"windows-1251\"></script>", "~/bundles/as")
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.3/jquery-ui.min.js?modules=core,widget,mouse,sortable"></script>
    <script src="~/js/as/controls/as.selectImage.js" charset="windows-1251"></script>
    <script type="text/javascript" src="/js/uploadify/jquery.uploadify-3.1.min.js"></script>
    <script src="~/js/jquery.signalR-2.1.2.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/js/AS/controls/as.opinion.js"></script>
    @Scripts.RenderFormat("<script type=\"text/javascript\" src=\"{0}\" charset=\"windows-1251\"></script>", "~/bundles/sb-admin-js")
    @StackExchange.Profiling.MiniProfiler.RenderIncludes()
    @Html.GlimpseClient()
    @RenderSection("js", false)
</body>
</html>