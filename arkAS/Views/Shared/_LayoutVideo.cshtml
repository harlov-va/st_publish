@using Glimpse.Mvc.Html
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@(ViewBag.Title ?? "Ark AS")</title>
    
    
    
    @Styles.Render("~/bundles/css")
    @Html.Raw(arkAS.BLL.Core.CoreManager.StyleForDev())
    @RenderSection("css", false)
   
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Ark AS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Roles.IsUserInRole("admin"))
                    {
                        <li>@Html.ActionLink("Панель управления", "Index", "Admin")</li>
                    }
                    @if (User.Identity.IsAuthenticated && !Roles.IsUserInRole("admin") && !Roles.IsUserInRole("guest"))
                    {
                        <li>@Html.ActionLink("Кабинет", "Index", "Cabinet")</li>
                    }
                    <li>@Html.ActionLink("О нас", "About", "Home")</li>
                    <li>@Html.ActionLink("Как связаться", "Contact", "Home")</li>
                    <li>
                        <a class=" dropdown-toggle" data-toggle="dropdown" aria-expanded="false" href="#">Демо <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Все демо", "Index", "Demo")</li>
                            <li><a href="~/Content/sb-admin-2-1.0.5/index.html" target="_blank">Шаблон панели управления</a></li>
                            <li>@Html.ActionLink("Просто вывод таблицы с сортировкой и фильтрами", "SimpleTable", "Demo")</li>
                            <li>@Html.ActionLink("Фильтрация данных", "FilterTable", "Demo")</li>
                            <li>@Html.ActionLink("Inline редактирование", "InlineEditTable", "Demo")</li>
                            <li>@Html.ActionLink("Редактирование через модальную форму", "FullEditTable", "Demo")</li>
                            <li>@Html.ActionLink("Галочки для групповых операций", "GroupOperationTable", "Demo")</li>
                            <li>@Html.ActionLink("Двойная сортировка", "DoubleSortTable", "Demo")</li>
                            <li>@Html.ActionLink("Управляющие кнопки и показ вложенных элементов", "RowButtonsTable", "Demo")</li>
                            <li>@Html.ActionLink("Показ вложенной статистики по дням", "ShowStatTable", "Demo")</li>
                            <li>@Html.ActionLink("Настройка столбцов", "ColSettingsTable", "Demo")</li>
                            <li>@Html.ActionLink("Комментарии к элементам таблицы", "CommentsTable", "Demo")</li>
                            <li>@Html.ActionLink("Копирование другой строки", "CopyRowTable", "Demo")</li>
                            <li>@Html.ActionLink("Экспорт в Excel и PDF", "ExportExcelTable", "Demo")</li>
                            <li>@Html.ActionLink("Инструмент замены в определенных полях", "ReplaceToolTable", "Demo")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("AS Form - создание форм различной сложности", "ASForm", "Demo")</li>
                            <li>@Html.ActionLink("Cоздание простой формы", "SimpleForm", "Demo")</li>
                            <li class="divider"></li>                            
                            <li>@Html.ActionLink("Файловый менеджер", "Example", "FileEditor")</li>
                            <li>@Html.ActionLink("Новости", "GetArticleItems", "Article")</li>
                            <li>@Html.ActionLink("Компонент контроля действий", "AsCtrl", "Demo")</li>
                            <li>@Html.ActionLink("Графики", "Graphic", "Graphic")</li>
                            <li>@Html.ActionLink("AS Info - отображение уточняющего контента для элемента", "PopupInfo", "Demo")</li>
                            <li>@Html.ActionLink("Пример использования Signal R", "SignalR", "Demo")</li>
                            <li>@Html.ActionLink("Пример компонента одиночной замены картинки", "AsImageAsText", "Demo")</li>
                            <li>@Html.ActionLink("Пример элемента профиля пользователя", "ProfileFormUser", "Demo")</li>
                            <li>@Html.ActionLink("Обратный счетчик", "CountDown", "Demo")</li>
                            <li>@Html.ActionLink("Видео на фоне", "VideoBackground", "Demo")</li>
                            <li>@Html.ActionLink("Стандартные ответы на телефонные звонки", "PlayAudio", "Demo")</li>
                            <li>@Html.ActionLink("Горячие кнопки", "HotKeysDemo", "Demo")</li>
                           
                        </ul>
                    </li>
                    
                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="body-content2">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Система разработки CRM (личных кабинетов) на заказ Ark AS (Web-automation.ru)</p>
                @Html.Partial("_ViewSwitcher")
            </footer>
        </div>
    </div>
    <div class="modal fade" id="asModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Modal title</h4>
                </div>
                <div class="modal-body">
                    <p>One fine body&hellip;</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                    <button type="button" class="btn btn-primary">ОК</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
    <script src="~/js/AS/as.resources.js" charset="windows-1251"></script>

    @Scripts.Render("~/bundles/libs")
    @Scripts.Render("~/bundles/as")
    @Scripts.Render("~/bundles/highcharts")
