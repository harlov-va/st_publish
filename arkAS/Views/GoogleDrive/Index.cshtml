@{
    ViewBag.Title = "GoogleDoc";
    Layout = arkAS.BLL.Core.CoreManager.GetCabinetLayout();
    var title = ViewBag.name;
}

@section css{
    <style>
        #files {
        height:30px;
        max-width:300px;
        }
        .loading span {
        color:blue;
        text-align:center;
        font-size:14px;
        }
        .active {
        margin-top:5px;
        display:block !important;    
        }
        #doc-title {
        height:28px;
        }
        .alert {
        margin-top:10px;
        margin-right:30px;
        }
    </style>
    
    }



<div class="container">
    <div class="row">
        <div class="col-md-4">
            <select id="files">
                @foreach (var item in title)
                { 
                    <option value="@item">@item</option>                
                }
            </select> 
        </div>
        <div class="col-md-3">
            <button class="btn btn-danger delet" >Удалить файл</button>
        </div>
        <div class="col-lg-2">
            <div class="loading" style="display:none">
                <span>Выполняется....</span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 doc-edit">
            <textarea class='as-html usText' id="1"></textarea><br />
        </div>        
    </div>
    <div class="row">
        <div class="col-md-2">
            <button class="btn btn-default create">Создать документ</button>
            <label style="display:block">
                Имя документа:
                <input style="display:block" id="doc-title" type="text" name="name_title" />
            </label>
        </div>
        <div class="col-md-2">
            <button class="btn btn-default edit">Сохранить изменения</button>
           
        </div>
        <div class="col-md-2">
            <button  class="btn btn-warning clean">Очистить форму</button>
        </div>
      </div>
                 
      
</div>

@section js{
    <script type="text/javascript">

        var idFile = "";

        $(document).ready(function () {
            $('.usText').mouseover();
            $('.usText').html('Приветик');
        });
       
        $('#files').change(function () {
            var Name = $('#files').val();
            $.ajax({
                url: '/GoogleDrive/GetContent',
                type: 'Get',
                dataType: 'json',
                traditional: true,
                data: { Name: Name },
                beforeSend: loading(),
                success: function (data) {
                    console.log(data);
                    idFile = data[1];
                    tinyMCE.activeEditor.setContent(' ', { format: 'raw' })
                    tinyMCE.activeEditor.setContent(data[0] , { format: 'raw' })
                    $('.loading').removeClass('active');
                    $('.btn').removeAttr('disabled');
                }
            });

        });

        function loading() {
            as.sys.bootstrapAlert("Выполняется...", { type: "success" });
            $('.btn').attr('disabled', 'disabled');
        }
        $('.create').click(function () {
            var jsonObject = {
                title:$('#doc-title').val(),
                theHtml: tinyMCE.activeEditor.getContent({ format: 'raw' })
            };
           /* var jsonObject = {
                title:10,
                theHtml:"Успех"
            };*/
            if ($('#doc-title').val() == "")
            {
                as.sys.bootstrapAlert("Заполните поле", { type: "warning" });
                return;
            }
            console.log(jsonObject);
            $.ajax({
                url: '/GoogleDrive/CreateDoc',
                type: 'POST',
                dataType: 'json',
                traditional: true,
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify(jsonObject),
                beforeSend: loading(),
                success: function (data) {
                    console.log(data);
                    $("#files").append($('<option value="' + $('#doc-title').val() + '">' + $('#doc-title').val() + '</option>'));
                    $("#files [value='" + $('#doc-title').val() + "']").attr("selected", "selected");
                    $('#doc-title').val("");
                    $('.loading').removeClass('active');
                    $('.btn').removeAttr('disabled');
                }
            });
        });

        $('.edit').click(function () {
            var json = {
                theHtml: tinyMCE.activeEditor.getContent({ format: 'raw' }),
                idFile: idFile
            };
            $.ajax({
                url: '/GoogleDrive/EditDoc',
                type: 'POST',
                dataType: 'json',
                traditional: true,
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify(json),
                beforeSend: loading(),
                success: function (data) {
                    console.log(data);
                    $('.loading').removeClass('active');
                    $('.btn').removeAttr('disabled');
                }
            });

        });

        $('.delet').click(function () {
            var Name = $('#files').val();
            $.ajax({
                url: '/GoogleDrive/DeletFiles',
                type: 'Get',
                dataType: 'json',
                traditional: true,
                data: { Name: Name },
                beforeSend: loading(),
                success: function (data) {
                    console.log(data);
                    if (data == true)
                    {
                        $('#files :selected').remove();
                    }
                    tinyMCE.activeEditor.setContent(' ', { format: 'raw' })
                    $('.loading').removeClass('active');
                    $('.btn').removeAttr('disabled');
                }
            });
        });
        $('.clean').click(function () {
            tinyMCE.activeEditor.setContent(' ', { format: 'raw' })

        });

    </script>
    
    }