        height: 30px;
        }
        .legend {
        margin-top:20px;}
        .item_btn {
        width:auto;}
        #result {
        margin:auto;}
        .name_item {
            width:auto; 
            margin-bottom: -20px;         
        }
        .name_legend {
        font-size:15px;
        }
        .salary_item {
             width:auto;   
        }
        .salary_legend {
       font-size:12px; }
        .requirement_item {
        width:auto;
        }
