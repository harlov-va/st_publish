@model MosaikViewModel
@{
    ViewBag.Title = "Mosaik";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    * {
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
    }
    .grid {
    width:500px;
    margin:auto
    }

    /* ---- .item ---- */

    .grid-item {
        float: left;
        height: 100px;
        background: #0D8;
        border: 2px solid #333;
        border-color: hsla(0, 0%, 0%, 0.7);
    }

    

        .odd {
            width: 50px;
            height: 50px;
            position:relative;
            top: 100px;
            left: -100px;
        }

        .even {
            width: 100px;
            height: 100px;
        }
        .even2 {
            width: 150px;
            height: 150px;
            position: relative;
        }
    .grid-item > * {
        margin: 0;
        padding: 0;
    }

    img {
        margin: auto;
        width: 100%;
        height: 100%;
    }
</style>
<h2>Mosaik</h2>
<input type="button" class="btn btn-success btn-large mos" value="Get Images" />
<br />
<div class="grid">
</div>


